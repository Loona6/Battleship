<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>

<VBox spacing="20" alignment="CENTER" xmlns="http://javafx.com/javafx/17.0.2"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="application.StartController">
    <Label text="Battleship" style="-fx-font-size:36px; -fx-font-weight:bold;"/>
    <ImageView fx:id="startImage" fitHeight="250" fitWidth="400" pickOnBounds="true" preserveRatio="true"/>
    <Button fx:id="startButton" text="Start Game" onAction="#startGame"/>
</VBox>
