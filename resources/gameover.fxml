<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>

<VBox spacing="20" alignment="CENTER" xmlns="http://javafx.com/javafx/17.0.2"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="application.GameOverController">
    <Label fx:id="winnerLabel" text="Player X Wins!" style="-fx-font-size:36px;-fx-font-weight:bold;"/>
    <Label fx:id="statsLabel" text="Stats" style="-fx-font-size:16px; -fx-text-alignment:center;"/>
    <Button text="Replay" onAction="#replay"/>
    <Button text="Main Menu" onAction="#mainMenu"/>
    <Button text="Exit" onAction="#exit"/>
</VBox>
