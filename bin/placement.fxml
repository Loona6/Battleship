<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>

<VBox spacing="20" alignment="CENTER" xmlns="http://javafx.com/javafx/17.0.2"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="application.PlacementController">
    
    <Label fx:id="infoLabel" text="Player placing ships..." style="-fx-font-size:18px;"/>
    
    <!-- Center the grid horizontally -->
    <HBox alignment="CENTER">
        <GridPane fx:id="placementGrid"/>
    </HBox>
    
    <Button fx:id="rotateButton" text="Rotate Ship" onAction="#rotateShip"/>
    <Button fx:id="nextPlayerButton" text="Next Player / Start Game" onAction="#nextPlayer"/>
    
</VBox>
